{
  "compilerOptions": {
    "lib": ["dom", "ES2022"],
    "outDir": "./",
    "rootDir": "./",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "ES2022",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./angular/**/*"],
  "exclude": ["node_modules", "./src/main/resources/static/script/bundle.js"],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}